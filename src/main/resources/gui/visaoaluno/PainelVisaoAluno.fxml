<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!--@author Josemar-->

<ScrollPane fitToWidth="true" styleClass="root" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.visaoaluno.PainelVisaoAlunoController">
    <content>
        <VBox spacing="20.0">
            <children>
                <Label fx:id="lblBoasVindas" styleClass="titulo-inicial" text="Bem-vindo(a), Aluno!">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <TitledPane animated="false" text="Minhas Notas e Frequência">
                    <content>
                        <ListView fx:id="listNotas" prefHeight="250.0" prefWidth="200.0" />
                    </content>
                </TitledPane>
                <TitledPane animated="false" text="Meus Dados Cadastrais (Somente Leitura)">
                    <content>
                        <GridPane hgap="10.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="120.0" />
                                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
                            </columnConstraints>
                            <children>
                                <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                <TextField fx:id="txtNome" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                <Label text="Matrícula:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                <TextField fx:id="txtMatricula" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Label text="Curso:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                <TextField fx:id="txtCurso" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                <TextField fx:id="txtEmail" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                            </children>
                        </GridPane>
                    </content>
                </TitledPane>
                <TitledPane animated="false" text="Mural de Avisos da Turma">
                    <content>
                        <ListView fx:id="listMural" prefHeight="150.0" />
                    </content>
                </TitledPane>
                <TitledPane animated="false" text="Minhas Turmas">
                    <content>
                        <ListView fx:id="listTurmas" prefHeight="150.0" prefWidth="200.0" />
                    </content>
                </TitledPane>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </content>
</ScrollPane>