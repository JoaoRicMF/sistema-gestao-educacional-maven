<VBox spacing="10.0" styleClass="root" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.visaoaluno.DetalhesAvisoController">
    <children>
        <Label fx:id="lblTitulo" styleClass="titulo-inicial" text="Título do Aviso">
            <font>
                <Font size="22.0" />
            </font>
        </Label>
        <Label fx:id="lblSubtitulo" text="Subtítulo informativo" />
        <TextArea fx:id="txtConteudo" editable="false" prefHeight="250.0" wrapText="true" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>