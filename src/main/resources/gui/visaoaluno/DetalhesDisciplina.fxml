<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" styleClass="root" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.visaoaluno.DetalhesDisciplinaController">
    <children>
        <Label fx:id="lblNomeDisciplina" styleClass="titulo-inicial" text="Detalhes da Disciplina">
            <font>
                <Font size="22.0" />
            </font>
        </Label>
        <GridPane hgap="10.0" vgap="12.0">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>
            <children>
                <Label text="Nota 1:" GridPane.rowIndex="0" />
                <TextField fx:id="txtNota1" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Nota 2:" GridPane.rowIndex="1" />
                <TextField fx:id="txtNota2" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Média Final:" GridPane.rowIndex="2" />
                <TextField fx:id="txtMediaFinal" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Total de Aulas:" GridPane.rowIndex="3" />
                <TextField fx:id="txtTotalAulas" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Faltas:" GridPane.rowIndex="4" />
                <TextField fx:id="txtFaltas" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Frequência:" GridPane.rowIndex="5" />
                <TextField fx:id="txtFrequencia" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <Label text="Status Final:" GridPane.rowIndex="6" />
                <TextField fx:id="txtStatus" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            </children>
        </GridPane>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>