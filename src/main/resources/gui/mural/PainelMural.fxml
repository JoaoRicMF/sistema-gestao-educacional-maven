<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane styleClass="root"  xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.mural.PainelMuralController">
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <content>
                <VBox spacing="10.0" styleClass="vbox-container">
                    <children>
                        <TitledPane animated="false" text="Enviar Aviso para Turma">
                            <content>
                                <GridPane hgap="15.0" vgap="15.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="NEVER" />
                                        <ColumnConstraints hgrow="ALWAYS" />
                                    </columnConstraints>
                                    <children>
                                        <Label text="Enviar Para:" GridPane.halignment="RIGHT" />
                                        <ComboBox fx:id="cbTurmas" prefWidth="300.0" GridPane.columnIndex="1" />
                                        <Label text="Título:" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                                        <TextField fx:id="txtTitulo" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    </children>
                                </GridPane>
                            </content>
                        </TitledPane>
                        <TitledPane animated="false" text="Conteúdo da Mensagem">
                            <content>
                                <TextArea fx:id="txtConteudo" prefHeight="200.0" wrapText="true" />
                            </content>
                        </TitledPane>
                    </children>
                    <padding>
                        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="20.0" styleClass="vbox-container">
            <children>
                <Button fx:id="btnCancelar" onAction="#limparCampos" text="Cancelar" prefWidth="140.0">
                    <graphic><Text styleClass="icon" text="❌" /></graphic>
                </Button>
                <Button onAction="#enviarAviso" text="Enviar Aviso" prefWidth="140.0">
                    <graphic><Text styleClass="icon" text="✉️" /></graphic>
                </Button>
            </children>
            <padding>
                <Insets bottom="20.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>