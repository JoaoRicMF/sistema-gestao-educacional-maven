<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane styleClass="root"  xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.aluno.PainelAlunoController">
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <content>
                <VBox spacing="10.0" styleClass="vbox-container">
                    <children>
                        <TitledPane animated="false" text="Dados Pessoais e Acadêmicos">
                            <content>
                                <GridPane hgap="15.0" vgap="15.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="NEVER" />
                                        <ColumnConstraints hgrow="ALWAYS" />
                                        <ColumnConstraints hgrow="NEVER" />
                                        <ColumnConstraints hgrow="ALWAYS" />
                                        <ColumnConstraints hgrow="NEVER" />
                                        <ColumnConstraints hgrow="ALWAYS" />
                                    </columnConstraints>
                                    <children>
                                        <Label text="Nome" GridPane.halignment="RIGHT" />
                                        <TextField fx:id="txtNome" GridPane.columnIndex="1" />
                                        <Label text="Data de Nascimento" GridPane.columnIndex="2" GridPane.halignment="RIGHT" />
                                        <TextField fx:id="txtDataNascimento" GridPane.columnIndex="3" />
                                        <Label text="CPF" GridPane.columnIndex="4" GridPane.halignment="RIGHT" />
                                        <TextField fx:id="txtCPF" GridPane.columnIndex="5" />
                                        <Label text="RG" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                                        <TextField fx:id="txtRG" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                        <Label text="Matrícula" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                                        <TextField fx:id="txtMatricula" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                                        <Label text="Semestre" GridPane.columnIndex="4" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                                        <TextField fx:id="txtSemestre" GridPane.columnIndex="5" GridPane.rowIndex="1" />
                                        <Label text="Telefone" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                                        <TextField fx:id="txtTelefone" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                        <Label text="Email" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                                        <TextField fx:id="txtEmail" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                                        <Label text="Curso" GridPane.columnIndex="4" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                                        <TextField fx:id="txtCurso" GridPane.columnIndex="5" GridPane.rowIndex="2" />
                                        <Label text="Tipo de Curso" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
                                        <ComboBox fx:id="cbTipoCurso" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                        <Label text="Nível Acadêmico" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
                                        <ComboBox fx:id="cbNivelAcademico" prefWidth="200.0" GridPane.columnIndex="3" GridPane.rowIndex="3" />
                                        <Label text="Status do Aluno" GridPane.columnIndex="4" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
                                        <ComboBox fx:id="cbStatusAluno" prefWidth="200.0" GridPane.columnIndex="5" GridPane.rowIndex="3" />
                                        <Label text="Gênero" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
                                        <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.columnSpan="5">
                                            <children>
                                                <RadioButton fx:id="rbMasculino" text="Masculino">
                                                    <toggleGroup><ToggleGroup fx:id="bgGenero" /></toggleGroup>
                                                </RadioButton>
                                                <RadioButton fx:id="rbFeminino" text="Feminino" toggleGroup="$bgGenero" />
                                                <RadioButton fx:id="rbOutro" text="Outro" toggleGroup="$bgGenero" />
                                                <RadioButton fx:id="rbNaoInformar" text="Não Informar" toggleGroup="$bgGenero" />
                                            </children>
                                        </HBox>
                                    </children>
                                </GridPane>
                            </content>
                        </TitledPane>
                        <TitledPane animated="false" text="Endereço">
                            <content>
                                <GridPane hgap="10.0" vgap="10.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="NEVER" />
                                        <ColumnConstraints hgrow="ALWAYS" />
                                        <ColumnConstraints hgrow="NEVER" />
                                        <ColumnConstraints hgrow="ALWAYS" />
                                        <ColumnConstraints hgrow="NEVER" />
                                        <ColumnConstraints hgrow="ALWAYS" />
                                    </columnConstraints>
                                    <children>
                                        <Label text="Rua" GridPane.halignment="RIGHT" />
                                        <TextField fx:id="txtRua" GridPane.columnIndex="1" />
                                        <Label text="Número" GridPane.columnIndex="2" GridPane.halignment="RIGHT" />
                                        <TextField fx:id="txtNumero" GridPane.columnIndex="3" />
                                        <Label text="Complemento" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                                        <TextField fx:id="txtComplemento" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                        <Label text="Bairro" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                                        <TextField fx:id="txtBairro" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                                        <Label text="Cidade" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                                        <TextField fx:id="txtCidade" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                        <Label text="CEP" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                                        <TextField fx:id="txtCEP" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                                        <Label text="UF" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
                                        <ComboBox fx:id="cbUF" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                    </children>
                                </GridPane>
                            </content>
                        </TitledPane>
                    </children>
                    <padding>
                        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10.0" styleClass="vbox-container">
            <children>
                <Button fx:id="btnCancelar" onAction="#limparCampos" prefWidth="120.0" text="Cancelar">
                    <graphic><Text styleClass="icon" text="❌" /></graphic>
                </Button>
                <Button fx:id="btnSalvar" onAction="#salvarOuAtualizar" prefWidth="120.0" text="Salvar">
                    <graphic><Text styleClass="icon" text="💾" /></graphic>
                </Button>
                <MenuButton text="Opções" styleClass="menu-button"> <items>
                    <MenuItem text="Buscar Aluno" onAction="#buscarEPreencher" />
                    <MenuItem text="Desativar" onAction="#desativar" />
                    <MenuItem text="Trancar Matrícula" onAction="#trancarMatricula" />
                    <MenuItem text="Avançar Semestre" onAction="#avancarSemestre" />
                </items>
                </MenuButton>
            </children>
            <padding>
                <Insets bottom="20.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>