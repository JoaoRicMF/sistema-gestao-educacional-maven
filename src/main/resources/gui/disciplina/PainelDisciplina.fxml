<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane styleClass="root"  xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.disciplina.PainelDisciplinaController">
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <content>
                <VBox spacing="20.0" styleClass="vbox-container">
                    <children>
                        <TitledPane animated="false" text="Dados da Disciplina">
                            <content>
                                <GridPane hgap="15.0" vgap="15.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="NEVER" />
                                        <ColumnConstraints hgrow="ALWAYS" />
                                        <ColumnConstraints hgrow="NEVER" />
                                        <ColumnConstraints hgrow="ALWAYS" />
                                    </columnConstraints>
                                    <children>
                                        <Label text="Nome da Disciplina:" GridPane.halignment="RIGHT" />
                                        <TextField fx:id="txtNomeDisciplina" prefWidth="100.0" maxWidth="300" GridPane.columnIndex="1" GridPane.columnSpan="3" />
                                        <Label text="Carga Horária:" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                                        <TextField fx:id="txtCargaHoraria" prefWidth="100.0" maxWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                        <Label text="Série / Semestre:" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                                        <TextField fx:id="txtSerieSemestre" prefWidth="100.0" maxWidth="300" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                                    </children>
                                </GridPane>
                            </content>
                        </TitledPane>
                    </children>
                    <padding>
                        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="20.0" styleClass="vbox-container">
            <children>
                <Button fx:id="btnCancelar" onAction="#limparCampos" prefWidth="120.0" text="Cancelar">
                    <graphic><Text styleClass="icon" text="❌" /></graphic>
                </Button>
                <Button fx:id="btnSalvar" onAction="#salvarOuAtualizar" prefWidth="120.0" text="Salvar">
                    <graphic><Text styleClass="icon" text="💾" /></graphic>
                </Button>
                <MenuButton text="Opções" styleClass="menu-button"> <items>
                    <MenuItem text="Buscar" onAction="#buscarEPreencher" />
                    <MenuItem text="Excluir" onAction="#excluirDisciplina" />
                </items>
                </MenuButton>
            </children>
            <padding>
                <Insets bottom="20.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>